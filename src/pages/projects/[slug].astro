---
// src/pages/projects/[slug].astro
import Layout from "../../layouts/Layout.astro";
import NavbarBack from "../../components/NavbarBack.astro";
import { projects } from "../../data/projects";
import ProjectCard from "../../components/ProjectCard.astro";
import { AstroError } from "astro/errors";

export async function getStaticPaths() {
  return projects.map((p) => ({ params: { slug: p.slug } }));
}

const { slug } = Astro.params;
const project = projects.find((p) => p.slug === slug);

if (!project) throw new AstroError(`Proyecto no encontrado: ${slug}`);

// Relacionados: shuffle liviano + 2 items
const related = projects
  .filter((p) => p.slug !== project.slug)
  .sort(() => 0.5 - Math.random())
  .slice(0, 2);

// SEO por página (sin inventar métricas)
const pageTitle = `${project.title} | Alex Pereyra`;
const pageDescription =
  project.description ?? "Caso de estudio y detalles del proyecto.";
const ogImage = project.image ?? "/opengraph.png";

const hasHighlights =
  Array.isArray(project.highlights) && project.highlights.length > 0;

const hasEngineering =
  Array.isArray(project.engineering) && project.engineering.length > 0;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonical={`https://www.alexpereyra.dev/projects/${project.slug}`}
  ogImage={ogImage}
>
  <NavbarBack
    path={[
      { href: "/", label: "Inicio" },
      { href: "/#proyectos", label: "Proyectos" },
    ]}
    current={project.title}
  />

  <main id="content" class="page-bg pt-28 md:pt-32 px-6 md:px-12">
    <article class="max-w-5xl mx-auto space-y-14 md:space-y-16">
      <!-- Hero visual del caso -->
      <header class="space-y-8">
        <figure
          data-reveal
          class="rounded-3xl overflow-hidden ring-1 ring-black/5 dark:ring-white/10"
        >
          <img
            src={project.image}
            alt={`Captura de ${project.title}`}
            class="w-full object-cover max-h-115"
            loading="lazy"
            decoding="async"
            width="1280"
            height="720"
          />
        </figure>

        <div
          data-reveal
          class="glass-box px-6 py-10 md:px-10 md:py-12 rounded-2xl space-y-10"
        >
          <div class="text-center space-y-4">
            <h1
              class="text-4xl md:text-5xl font-extrabold text-surface leading-tight text-balance"
            >
              {project.title}
            </h1>
            <p
              class="text-base md:text-lg text-surface-muted max-w-3xl mx-auto leading-relaxed text-balance"
            >
              {project.description}
            </p>
          </div>

          {
            project.tech?.length > 0 && (
              <ul
                class="flex flex-wrap justify-center gap-2"
                aria-label="Tecnologías usadas"
              >
                {project.tech.map((tech) => (
                  <li class="text-sm px-3 py-1.5 rounded-full border border-black/10 dark:border-white/10 bg-black/5 dark:bg-white/5 text-surface">
                    {tech}
                  </li>
                ))}
              </ul>
            )
          }

          <!-- Highlights -->
          {
            hasHighlights && (
              <section class="max-w-2xl mx-auto">
                <h2 class="sr-only">Puntos destacados</h2>
                <ul class="list-disc list-inside text-left text-surface-muted space-y-2 text-base">
                  {project.highlights!.map((point) => (
                    <li>{point}</li>
                  ))}
                </ul>
              </section>
            )
          }

          <!-- Engineering decisions -->
          {
            hasEngineering && (
              <section class="max-w-2xl mx-auto">
                <div class="text-center mb-4">
                  <h2 class="text-lg md:text-xl font-bold text-surface">
                    Engineering
                  </h2>
                  <p class="text-sm text-surface-muted mt-1 text-balance">
                    Decisiones técnicas y trade-offs que guiaron el desarrollo.
                  </p>
                </div>

                <ul class="space-y-2 text-left">
                  {project.engineering!.map((item) => (
                    <li class="flex gap-3 text-base text-surface-muted leading-relaxed">
                      <span
                        class="mt-2 w-1.5 h-1.5 rounded-full bg-primary dark:bg-accent flex-none"
                        aria-hidden="true"
                      />
                      <span>{item}</span>
                    </li>
                  ))}
                </ul>
              </section>
            )
          }

          <div class="flex flex-col sm:flex-row justify-center gap-3 pt-2">
            {
              project.link && (
                <a
                  href={project.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-primary inline-flex items-center justify-center"
                  aria-label={`Abrir ${project.title} en una nueva pestaña`}
                >
                  Ver sitio
                </a>
              )
            }

            {
              project.repo && (
                <a
                  href={project.repo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="btn-outline inline-flex items-center justify-center"
                  aria-label={`Ver repositorio de ${project.title} en una nueva pestaña`}
                >
                  Ver código
                </a>
              )
            }
          </div>
        </div>
      </header>

      <!-- Relacionados -->
      {
        related.length > 0 && (
          <section data-reveal class="pt-6 md:pt-10">
            <div class="space-y-6">
              <h2 class="text-2xl md:text-3xl font-extrabold text-center text-surface text-balance leading-snug">
                También te puede interesar
              </h2>

              <ul
                class="grid grid-cols-1 md:grid-cols-2 gap-8"
                aria-label="Proyectos relacionados"
              >
                {related.map((p) => (
                  <li>
                    <ProjectCard {...p} />
                  </li>
                ))}
              </ul>
            </div>
          </section>
        )
      }
    </article>
  </main>
</Layout>
