---
import Layout from "../../layouts/Layout.astro";
import NavbarLab from "../../components/NavbarLab.astro";

const demos = [
  {
    slug: "sigj",
    title: "SIGJ | Gestión Judicial",
    description:
      "Demo funcional del sistema de gestión judicial con flujos administrativos y visualización de documentos.",
    image: "/assets/lab/sigj.webp",
  },
  {
    slug: "gsap",
    title: "Animaciones con GSAP",
    description:
      "Colección de demos animadas con GSAP: efectos de scroll, interacciones y más.",
    image: "/assets/lab/gsap-cover.webp",
  },
];
---

<Layout>
  <NavbarLab />

  <section
    class="page-bg py-20 px-6 md:px-12"
    role="region"
    aria-labelledby="lab-main-heading"
  >
    <div class="max-w-6xl mx-auto">
      <!-- Header -->
      <div class="glass-box text-center mb-12 p-8" data-reveal>
        <h1
          id="lab-main-heading"
          class="text-4xl md:text-5xl font-bold text-surface mb-4"
        >
          Laboratorio
        </h1>
        <p
          class="text-base md:text-lg text-surface-muted max-w-2xl mx-auto leading-relaxed text-balance"
        >
          Experimentos visuales, animaciones y pruebas interactivas que exploran
          ideas más allá del trabajo comercial.
        </p>
      </div>

      <!-- Demos -->
      <ul
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8"
        aria-labelledby="lab-main-heading"
      >
        {
          demos.map((demo, index) => (
            <li
              class="motion-safe:animate-fade-slide-up"
              style={`animation-delay: ${index * 100}ms`}
            >
              <a
                href={`/lab/${demo.slug}`}
                class="block rounded-xl overflow-hidden shadow-md hover:shadow-lg transition-transform hover:scale-[1.02] bg-light/90 dark:bg-dark/80 backdrop-blur-sm border border-black/10 dark:border-white/10 p-4 h-full"
                aria-label={`Ver experimento: ${demo.title}`}
              >
                <article class="flex flex-col h-full">
                  <img
                    src={demo.image}
                    alt={`Captura de ${demo.title}`}
                    class="w-full aspect-video object-cover mb-4 rounded-md"
                    loading="lazy"
                    decoding="async"
                  />
                  <h2 class="text-lg font-semibold text-surface mb-1">
                    {demo.title}
                  </h2>
                  <p class="text-sm text-surface-muted leading-relaxed mt-auto">
                    {demo.description}
                  </p>
                </article>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
