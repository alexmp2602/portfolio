---
import Layout from "../../../layouts/Layout.astro";
import NavbarLab from "../../../components/NavbarLab.astro";
import { experiments } from "../../../data/experiments";
import LabCard from "../../../components/LabCard.astro";

const gsapDemos = experiments.filter((exp) =>
  [
    "cursor-gsap",
    "scroll-progress",
    "sticky-scroll",
    "scrolltrigger-timeline",
  ].includes(exp.slug)
);
---

<Layout>
  <NavbarLab />

  <section
    class="page-bg py-24 px-6 md:px-12"
    data-reveal
    role="region"
    aria-labelledby="gsap-title"
  >
    <div class="max-w-7xl mx-auto">
      <h1
        id="gsap-title"
        class="text-4xl md:text-5xl font-extrabold text-center mb-12 text-surface animate-fade-slide"
      >
        Demos de Animaciones con GSAP üöÄ
      </h1>

      <ul
        class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-8"
        aria-labelledby="gsap-title"
      >
        {
          gsapDemos.map((exp, i) => (
            <li
              class="motion-safe:animate-fade-slide-up"
              style={`animation-delay: ${i * 80}ms`}
            >
              <LabCard {...exp} />
            </li>
          ))
        }
      </ul>

      <div class="mt-12 text-center">
        <a
          href="/lab"
          class="btn-primary rounded-full"
          aria-label="Volver al laboratorio principal"
        >
          ‚Üê Volver al laboratorio
        </a>
      </div>
    </div>
  </section>
</Layout>
