---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import AboutSkills from "../components/AboutSkills.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import LabSection from "../components/LabSection.astro";
---

<Layout>
  <Navbar />

  <main id="main-content" role="main" aria-label="Contenido principal">
    <section id="inicio" role="region" aria-labelledby="hero-title">
      <Hero />
    </section>

    <section id="sobre-mi" role="region" aria-labelledby="about-title">
      <AboutSkills />
    </section>

    <section id="proyectos" role="region" aria-labelledby="projects-title">
      <Projects />
    </section>

    <section id="contacto" role="region" aria-labelledby="contact-title">
      <Contact />
    </section>

    <section id="laboratorio" role="region" aria-labelledby="lab-title">
      <LabSection />
    </section>
  </main>

  <Footer />
</Layout>
