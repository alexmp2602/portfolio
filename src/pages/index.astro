---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import AboutSkills from "../components/AboutSkills.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
import LabSection from "../components/LabSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Alex Pereyra | Frontend Engineer"
  description="Soy Alex Pereyra, Frontend Engineer. Trabajo con React, Next.js y TypeScript, con foco en arquitectura, performance, accesibilidad y UX escalable. Conocimientos complementarios: Node.js, SQL y APIs. Explorá proyectos y laboratorio."
  canonical="https://www.alexpereyra.dev"
  ogImage="/opengraph.png"
>
  <Navbar />

  <main id="content" role="main" aria-label="Contenido principal" class="page-bg">
    <!-- Hero -->
    <section id="inicio" aria-labelledby="hero-title" class="fade-in-up fade-delay-100">
      <h1 id="hero-title" class="sr-only">Alex Pereyra — Frontend Engineer</h1>
      <Hero />
    </section>

    <!-- Sobre mí & Skills -->
    <section id="sobre-mi" aria-labelledby="about-title" class="fade-in-up fade-delay-200">
      <div class="section-container">
        <h2 id="about-title" class="sr-only">Sobre mí y habilidades</h2>
        <AboutSkills />
      </div>
    </section>

    <!-- Experiencia -->
    <section id="experiencia" aria-labelledby="experience-title" class="fade-in-up fade-delay-250">
      <div class="section-container">
        <h2 id="experience-title" class="sr-only">Experiencia</h2>
        <Experience />
      </div>
    </section>

    <!-- Proyectos -->
    <section id="proyectos" aria-labelledby="projects-title" class="fade-in-up fade-delay-300">
      <div class="section-container">
        <h2 id="projects-title" class="sr-only">Proyectos destacados</h2>
        <Projects />
      </div>
    </section>

    <!-- Laboratorio -->
    <section id="laboratorio" aria-labelledby="lab-title" class="fade-in-up fade-delay-500">
      <div class="section-container">
        <h2 id="lab-title" class="sr-only">Laboratorio</h2>
        <LabSection />
      </div>
    </section>

    <!-- Contacto -->
    <section id="contacto" aria-labelledby="contact-title" class="fade-in-up fade-delay-400">
      <div class="section-container">
        <h2 id="contact-title" class="sr-only">Contacto</h2>
        <Contact />
      </div>
    </section>
  </main>

  <Footer />
</Layout>
