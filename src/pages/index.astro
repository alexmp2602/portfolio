---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import AboutSkills from "../components/AboutSkills.astro";
import Projects from "../components/Projects.astro";
import Contact from "../components/Contact.astro";
import LabSection from "../components/LabSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Alex Pereyra | Frontend & Full-Stack Developer"
  description="Soy Alex Pereyra, Frontend & Full-Stack Developer. Diseño interfaces rápidas con React/Next.js y construyo backends con Node.js y SQL. Explorá mis proyectos y el laboratorio creativo."
  canonical="https://www.alexpereyra.dev"
  ogImage="/opengraph.png"
>
  <Navbar />

  <main
    id="main-content"
    role="main"
    aria-label="Contenido principal"
    class="page-bg"
  >
    <!-- Hero -->
    <section
      id="inicio"
      role="region"
      aria-labelledby="hero-title"
      class="fade-in-up fade-delay-100"
    >
      <!-- Etiqueta accesible independiente del componente -->
      <h1 id="hero-title" class="sr-only">
        Alex Pereyra — Frontend & Full-Stack Developer
      </h1>
      <Hero />
    </section>

    <!-- Sobre mí & Skills -->
    <section
      id="sobre-mi"
      role="region"
      aria-labelledby="about-title"
      class="fade-in-up fade-delay-200"
    >
      <div class="section-container">
        <h2 id="about-title" class="sr-only">Sobre mí y habilidades</h2>
        <AboutSkills />
      </div>
    </section>

    <!-- Proyectos -->
    <section
      id="proyectos"
      role="region"
      aria-labelledby="projects-title"
      class="fade-in-up fade-delay-300"
    >
      <div class="section-container">
        <h2 id="projects-title" class="sr-only">Proyectos destacados</h2>
        <Projects />
      </div>
    </section>

    <!-- Contacto -->
    <section
      id="contacto"
      role="region"
      aria-labelledby="contact-title"
      class="fade-in-up fade-delay-400"
    >
      <div class="section-container">
        <h2 id="contact-title" class="sr-only">Contacto</h2>
        <Contact />
      </div>
    </section>

    <!-- Laboratorio -->
    <section
      id="laboratorio"
      role="region"
      aria-labelledby="lab-title"
      class="fade-in-up fade-delay-500"
    >
      <div class="section-container">
        <h2 id="lab-title" class="sr-only">Laboratorio</h2>
        <LabSection />
      </div>
    </section>
  </main>

  <Footer />
</Layout>
