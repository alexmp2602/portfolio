---
import "../styles/global.css";
import NavbarBack from "../components/NavbarBack.astro";

interface Crumb {
  href: string;
  label: string;
}

interface Props {
  title: string;
  description?: string;
  path?: Crumb[];
  current?: string;
  fallbackLabel?: string;
  fallbackHref?: string;
}

const { title, description, path, current, fallbackLabel, fallbackHref } =
  Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="bg-light text-dark dark:bg-dark dark:text-light font-sans">
    <NavbarBack
      path={path}
      current={current}
      fallbackLabel={fallbackLabel}
      fallbackHref={fallbackHref}
    />

    <main class="pt-28 px-6 md:px-12 max-w-7xl mx-auto space-y-12 py-28">
      <div class="text-center space-y-6 max-w-3xl mx-auto">
        <h1
          class="text-4xl md:text-5xl font-extrabold text-dark dark:text-light"
        >
          {title}
        </h1>
        {
          description && (
            <p class="text-dark/70 dark:text-light/60 text-base md:text-lg">
              {description}
            </p>
          )
        }
      </div>

      <slot />
    </main>
  </body>
</html>
