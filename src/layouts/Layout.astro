---
import "../styles/global.css";

const {
  title = "Alex Pereyra | Frontend Developer",
  description = "Portafolio de Alex Pereyra, desarrollador frontend especializado en Astro, React y Tailwind CSS.",
  canonical = "https://www.alexpereyra.dev",
  ogImage = "https://www.alexpereyra.dev/assets/logo/opengraph-preview.png",
} = Astro.props;
---

<!doctype html>
<html
  lang="es"
  class="scroll-smooth bg-light text-dark dark:bg-dark dark:text-light transition-colors duration-500 font-sans antialiased"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>

    <!-- Meta -->
    <meta name="description" content={description} />
    <meta name="theme-color" content="#256340" />
    <meta name="color-scheme" content="light dark" />
    <link rel="canonical" href={canonical} />
    <link
      rel="icon"
      type="image/webp"
      href="/assets/logo/logo_oscuro_original.webp"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />

    <!-- TipografÃ­a Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      as="style"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Variables CSS base -->
    <style>
      :root {
        --color-primary: #256340;
        --color-accent: #60a98f;
        --color-light: #fafafa;
        --color-dark: #1f1f1f;
      }
    </style>
  </head>

  <body class="bg-light dark:bg-dark">
    <main
      id="content"
      role="main"
      aria-label="Contenido principal"
      class="relative z-10"
    >
      <slot />
    </main>

    <!-- Scripts globales -->
    <script type="module" src="/scripts/setup-global.js"></script>
  </body>
</html>
