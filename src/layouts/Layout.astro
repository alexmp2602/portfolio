---
import "../styles/global.css";

type Props = {
  title?: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  locale?: string; // ej: "es_AR"
};

const {
  title = "Alex Pereyra | Frontend & Full-Stack Developer",
  description = "Portafolio de Alex Pereyra â€” Frontend & Full-Stack: React, Next.js, Node.js, SQL, AWS, Astro y Tailwind CSS.",
  canonical = "https://www.alexpereyra.dev",
  ogImage = "https://www.alexpereyra.dev/assets/logo/opengraph-preview.png",
  locale = "es_AR",
} = Astro.props as Props;

// JSON-LD (Person)
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Alex Pereyra",
  jobTitle: "Frontend & Full-Stack Developer",
  url: canonical,
  sameAs: [
    "https://www.linkedin.com/in/alex-pereyra-dev",
    "https://github.com/"
  ]
};
---
<!doctype html>
<html
  lang="es"
  class="scroll-smooth bg-light text-dark dark:bg-dark dark:text-light transition-colors duration-500 font-sans antialiased"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Meta -->
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />
    <meta name="color-scheme" content="light dark" />
    <!-- theme-color por modo -->
    <meta name="theme-color" content="#256340" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#0b1110" media="(prefers-color-scheme: dark)" />
    <link rel="canonical" href={canonical} />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- Icons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/icon-32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/icon-192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/icon-512.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <!-- Open Graph -->
    <meta property="og:locale" content={locale.replace("_","-")} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Preconnect / Fonts (mejor perf) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      as="style"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Variables CSS base -->
    <style>
      :root {
        --color-primary: #256340;
        --color-accent: #60a98f;
        --color-light: #fafafa;
        --color-dark: #1f1f1f;
      }
      .skip-link {
        position: absolute; left: -999px; top: auto; width: 1px; height: 1px; overflow: hidden;
      }
      .skip-link:focus {
        position: fixed; left: 1rem; top: 1rem; width: auto; height: auto; padding: .5rem .75rem;
        background: var(--color-primary); color: white; border-radius: .5rem; z-index: 1000;
      }
    </style>

    <!-- JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
  </head>

  <body class="bg-light dark:bg-dark">
    <a href="#content" class="skip-link">Saltar al contenido</a>

    <main
      id="content"
      role="main"
      aria-label="Contenido principal"
      class="relative z-10"
    >
      <slot />
    </main>

    <!-- Scripts globales: defer -->
    <script type="module" src="/scripts/setup-global.js" defer></script>
  </body>
</html>
