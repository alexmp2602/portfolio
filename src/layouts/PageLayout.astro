---
import "../styles/global.css";
import NavbarBack from "../components/NavbarBack.astro";

interface Crumb {
  href: string;
  label: string;
}

interface Props {
  title: string;
  description?: string;
  path?: Crumb[];
  current?: string;
  fallbackLabel?: string;
  fallbackHref?: string;
}

const { title, description, path, current, fallbackLabel, fallbackHref } =
  Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body class="bg-light text-dark dark:bg-dark dark:text-light font-sans">
    <NavbarBack
      path={path}
      current={current}
      fallbackLabel={fallbackLabel}
      fallbackHref={fallbackHref}
    />

    <main class="pt-28 px-6 md:px-12 max-w-4xl mx-auto space-y-12 py-28">
      <h1 class="text-3xl md:text-4xl font-extrabold text-center">
        {title}
      </h1>

      {
        description && (
          <p class="text-base md:text-lg text-dark/80 dark:text-light/70 text-center max-w-2xl mx-auto">
            {description}
          </p>
        )
      }

      <slot />
    </main>
  </body>
</html>
