---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/projects";
---

<section
  id="projects"
  class="page-bg py-28 px-6 md:px-12"
  aria-label="Proyectos"
>
  <div class="max-w-7xl mx-auto">
    <h2
      class="text-4xl md:text-5xl font-extrabold text-center mb-16 text-surface animate-fade-slide"
      data-reveal
    >
      Proyectos Destacados
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-10">
      {
        projects.map((p, i) => (
          <div
            class="glass-card p-6 rounded-2xl overflow-hidden transition-transform duration-300 hover:scale-[1.02] hover:shadow-lg motion-safe:animate-fade-slide-up h-full min-h-[440px] flex flex-col"
            style={`animation-delay: ${i * 100}ms`}
            data-reveal
          >
            <ProjectCard {...p} />
          </div>
        ))
      }
    </div>
  </div>
</section>
