---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/projects";
---

<section
  id="proyectos"
  class="page-bg py-28 px-6 md:px-12"
  role="region"
  aria-labelledby="projects-title"
>
  <div class="max-w-7xl mx-auto">
    <h2
      id="projects-title"
      class="text-surface text-4xl md:text-5xl font-extrabold text-center mb-16 fade-in-up fade-delay-100"
    >
      Proyectos Destacados
    </h2>

    <ul
      class="grid list-none p-0 m-0 gap-8 sm:gap-10 sm:grid-cols-2 lg:grid-cols-3 items-stretch"
      aria-labelledby="projects-title"
    >
      {
        projects.map((project, index) => {
          const cardId = `project-card-${index}`;
          return (
            <li
              class="h-full"
              style={`animation-delay: ${index * 120}ms`}
              data-reveal
            >
              <article
                class="relative glass-card h-full p-6 rounded-2xl overflow-hidden flex flex-col justify-between transition-transform duration-300 hover:scale-[1.015] hover:shadow-lg focus-within:ring-2 focus-within:ring-primary focus-within:outline-none motion-reduce:transition-none motion-reduce:hover:scale-100"
                aria-labelledby={cardId}
              >
                {/* TÃ­tulo accesible independiente del contenido del card */}
                <h3 id={cardId} class="sr-only">
                  {project.title}
                </h3>

                <ProjectCard {...project} />
              </article>
            </li>
          );
        })
      }
    </ul>
  </div>
</section>
