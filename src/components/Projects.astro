---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/projects";
---

<section
  id="proyectos"
  class="page-bg py-28 px-6 md:px-12"
  role="region"
  aria-labelledby="projects-title"
>
  <div class="max-w-7xl mx-auto">
    <h2
      id="projects-title"
      class="text-4xl md:text-5xl font-extrabold text-center mb-16 text-surface fade-in-up fade-delay-100"
    >
      Proyectos Destacados
    </h2>

    <ul
      class="grid gap-10 sm:grid-cols-2 lg:grid-cols-3"
      aria-labelledby="projects-title"
    >
      {
        projects.map((project, index) => (
          <li
            class="h-full"
            style={`animation-delay: ${index * 120}ms`}
            data-reveal
          >
            <article
              class="glass-card h-full p-6 rounded-2xl overflow-hidden flex flex-col justify-between hover:scale-[1.015] hover:shadow-lg transition-transform duration-300 focus-within:ring-2 focus-within:ring-primary focus-within:outline-none"
              tabindex="0"
              aria-label={`Proyecto: ${project.title}`}
            >
              <ProjectCard {...project} />
            </article>
          </li>
        ))
      }
    </ul>
  </div>
</section>
