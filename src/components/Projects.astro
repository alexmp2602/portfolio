---
import ProjectCard from "./ProjectCard.astro";
import { projects } from "../data/projects";
---

<section
  id="projects"
  class="py-28 px-6 md:px-12 max-w-7xl mx-auto"
  aria-label="Proyectos"
>
  <h2
    class="text-4xl md:text-5xl font-extrabold text-center mb-16 text-dark dark:text-light"
    data-reveal
  >
    Proyectos Destacados
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-10">
    {
      projects.map((p) => (
        <div
          class="group relative glass-card p-6 rounded-2xl overflow-hidden backdrop-blur-md shadow-subtle transition-transform hover:scale-[1.02] hover:shadow-lg"
          data-reveal
        >
          <ProjectCard {...p} />
        </div>
      ))
    }
  </div>
</section>
