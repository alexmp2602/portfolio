---
// src/components/ThemeToggle.astro
const size = Astro.props.size ?? "w-6 h-6";
---

<button
  type="button"
  data-toggle-theme
  aria-label="Cambiar entre modo claro y oscuro"
  aria-pressed="false"
  class={`theme-toggle p-2 rounded-full border border-black/10 dark:border-white/20 bg-light dark:bg-dark text-surface transition-colors duration-300 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-primary dark:focus-visible:ring-accent leading-none`}
>
  <span class="sr-only">Alternar tema</span>

  <!-- Contenedor del SVG inyectado -->
  <span
    class={`theme-icon ${size} grid place-items-center leading-none text-[0px] theme-icon-enter`}
    aria-hidden="true"></span>
</button>
