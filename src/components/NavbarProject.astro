---
interface Props {
  title?: string;
}
const { title } = Astro.props as Props;
---

<nav
  class="fixed top-0 left-0 w-full z-50 backdrop-blur bg-white/70 dark:bg-dark/70 border-b border-black/10 dark:border-white/10 transition-shadow"
  role="navigation"
  aria-label="Navegación de vuelta a la sección de proyectos"
>
  <div
    class="max-w-7xl mx-auto px-6 md:px-12 py-4 flex items-center justify-between"
  >
    <a
      href="/#projects"
      class="text-base font-medium text-dark dark:text-light hover:text-primary dark:hover:text-accent px-3 py-2 rounded-md transition focus:outline-none focus-visible:ring-2 focus-visible:ring-primary dark:focus-visible:ring-accent"
      aria-label="Ir a la sección de proyectos"
    >
      ← Volver a Proyectos
    </a>

    {
      title && (
        <span
          class="text-sm text-dark/60 dark:text-light/50 tracking-wide truncate text-right max-w-[60%] hidden sm:block text-balance"
          title={title}
        >
          {title}
        </span>
      )
    }
  </div>
</nav>
