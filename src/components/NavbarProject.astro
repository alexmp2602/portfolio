---
interface Props {
  title?: string;
}
const { title } = Astro.props as Props;
---

<nav
  class="fixed top-0 left-0 w-full z-50 backdrop-blur bg-white/70 dark:bg-dark/70 border-b border-black/10 dark:border-white/10 transition-shadow"
  aria-label="Navegación de vuelta a proyectos"
>
  <div
    class="max-w-7xl mx-auto px-6 md:px-12 py-4 flex items-center justify-between"
  >
    <!-- Volver a la sección de proyectos (anchor interno) -->
    <a
      href="/#proyectos"
      class="text-base font-medium text-dark dark:text-light px-3 py-2 rounded-md transition-colors hover:text-primary dark:hover:text-accent focus:outline-none focus-visible:ring-2 focus-visible:ring-primary dark:focus-visible:ring-accent"
    >
      ← Volver a Proyectos
    </a>

    <!-- Contexto del proyecto actual (opcional) -->
    {
      title && (
        <span
          class="hidden sm:block text-sm text-dark/60 dark:text-light/50 tracking-wide truncate max-w-[60%] text-right"
          title={title}
        >
          {title}
        </span>
      )
    }
  </div>
</nav>
