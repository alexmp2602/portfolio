---
interface Skill {
  name: string;
  icon: string;
}

const frontend: Skill[] = [
  { name: "HTML5", icon: "https://cdn.simpleicons.org/html5/E34F26" },
  { name: "CSS", icon: "https://cdn.simpleicons.org/css/1572B6" },
  { name: "JavaScript", icon: "https://cdn.simpleicons.org/javascript/F7DF1E" },
  { name: "TypeScript", icon: "https://cdn.simpleicons.org/typescript/3178C6" },
  { name: "React", icon: "https://cdn.simpleicons.org/react/61DAFB" },
  { name: "Astro", icon: "https://cdn.simpleicons.org/astro/FF5D01" },
  { name: "Next.js", icon: "https://cdn.simpleicons.org/nextdotjs/000000" },
  { name: "Tailwind", icon: "https://cdn.simpleicons.org/tailwindcss/06B6D4" },
];

const backend: Skill[] = [
  { name: "Node.js", icon: "https://cdn.simpleicons.org/nodedotjs/339933" },
  { name: "Express", icon: "https://cdn.simpleicons.org/express/000000" },
  { name: "PostgreSQL", icon: "https://cdn.simpleicons.org/postgresql/4169E1" },
  { name: "MySQL", icon: "https://cdn.simpleicons.org/mysql/4479A1" },
  { name: "Prisma", icon: "https://cdn.simpleicons.org/prisma/2D3748" },
  { name: "AWS", icon: "https://cdn.simpleicons.org/amazonaws/232F3E" },
  { name: "Vercel", icon: "https://cdn.simpleicons.org/vercel/000000" },
];

const tools: Skill[] = [
  { name: "Git", icon: "https://cdn.simpleicons.org/git/F05032" },
  { name: "GitHub", icon: "https://cdn.simpleicons.org/github/181717" },
  { name: "Vite", icon: "https://cdn.simpleicons.org/vite/646CFF" },
  { name: "ESLint", icon: "https://cdn.simpleicons.org/eslint/4B32C3" },
  { name: "Prettier", icon: "https://cdn.simpleicons.org/prettier/F7B93E" },
  { name: "Jest", icon: "https://cdn.simpleicons.org/jest/C21325" },
  { name: "Lighthouse", icon: "https://cdn.simpleicons.org/lighthouse/FF6D00" },
  { name: "DevTools", icon: "https://cdn.simpleicons.org/googlechrome/4285F4" },
];

const invertInDark = ["GitHub", "Next.js", "Express", "Vercel"];
---

<section
  id="sobre-mi"
  class="page-bg py-28 px-6 md:px-12"
  role="region"
  aria-labelledby="about-title"
>
  <div class="max-w-7xl mx-auto">
    <h2
      id="about-title"
      class="text-surface text-4xl md:text-5xl font-extrabold text-center mb-16"
    >
      Sobre mí & Tecnologías
    </h2>

    <!-- BENTO: bio izquierda, 3 columnas (cada una con 2 columnas internas) -->
    <div class="grid gap-6 md:grid-cols-12 items-stretch">
      <!-- Bio (izquierda, alta) -->
      <article
        class="glass-box p-6 md:col-span-5 md:row-span-2 flex flex-col items-center gap-6"
      >
        <img
          src="/assets/profile/alex.webp"
          alt="Foto de Alex Pereyra"
          class="rounded-3xl shadow-lg max-w-[280px] w-full object-cover"
          loading="lazy"
          decoding="async"
          width="200"
          height="280"
        />
        <div class="space-y-4 leading-relaxed text-center md:text-left">
          <p class="text-surface text-lg md:text-xl">
            Soy <strong>Alex Pereyra</strong>, <strong
              >Frontend & Full-Stack Developer</strong
            >. Diseño interfaces limpias y accesibles con <strong
              >React/Next.js</strong
            > y construyo backends en <strong>Node.js</strong> con <strong
              >SQL</strong
            >, desplegando en
            <strong>Vercel/AWS</strong>. Foco en rendimiento, accesibilidad y
            calidad.
          </p>
          <p class="text-surface-muted text-sm">
            Experiencias limpias, rápidas y mantenibles · Astro · Tailwind ·
            GSAP.
          </p>
        </div>
      </article>

      <!-- Skills (derecha) -->
      <div
        class="md:col-span-7 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6"
      >
        <!-- Frontend -->
        <article class="glass-box p-6">
          <h3
            class="text-lg md:text-xl font-semibold text-primary tracking-wide mb-4 text-center"
          >
            Frontend
          </h3>
          <ul
            class="grid grid-cols-4 md:grid-cols-2 gap-x-6 gap-y-6 place-items-center"
          >
            {
              frontend.map((s) => {
                const invert = invertInDark.includes(s.name);
                return (
                  <li class="flex flex-col items-center gap-2">
                    <div
                      class="w-14 h-14 rounded-xl glass-card ring-1 ring-black/5 dark:ring-white/10 flex items-center justify-center transition-transform duration-300 hover:scale-110"
                      title={s.name}
                    >
                      <img
                        src={s.icon}
                        alt={s.name}
                        class={`w-8 h-8 ${invert ? "icon-invert-dark" : ""}`}
                        loading="lazy"
                        decoding="async"
                        fetchpriority="low"
                        width="32"
                        height="32"
                      />
                    </div>
                    <span class="text-xs sm:text-sm text-surface text-center tracking-tight">
                      {s.name}
                    </span>
                  </li>
                );
              })
            }
          </ul>
        </article>

        <!-- Backend & Cloud -->
        <article class="glass-box p-6">
          <h3
            class="text-lg md:text-xl font-semibold text-primary tracking-wide mb-4 text-center"
          >
            Backend & Cloud
          </h3>
          <ul
            class="grid grid-cols-4 md:grid-cols-2 gap-x-6 gap-y-6 place-items-center"
          >
            {
              backend.map((s) => {
                const invert = invertInDark.includes(s.name);
                return (
                  <li class="flex flex-col items-center gap-2">
                    <div
                      class="w-14 h-14 rounded-xl glass-card ring-1 ring-black/5 dark:ring-white/10 flex items-center justify-center transition-transform duration-300 hover:scale-110"
                      title={s.name}
                    >
                      <img
                        src={s.icon}
                        alt={s.name}
                        class={`w-8 h-8 ${invert ? "icon-invert-dark" : ""}`}
                        loading="lazy"
                        decoding="async"
                        fetchpriority="low"
                        width="32"
                        height="32"
                      />
                    </div>
                    <span class="text-xs sm:text-sm text-surface text-center tracking-tight">
                      {s.name}
                    </span>
                  </li>
                );
              })
            }
          </ul>
        </article>

        <!-- Herramientas -->
        <article class="glass-box p-6">
          <h3
            class="text-lg md:text-xl font-semibold text-primary tracking-wide mb-4 text-center"
          >
            Herramientas
          </h3>
          <ul
            class="grid grid-cols-4 md:grid-cols-2 gap-x-6 gap-y-6 place-items-center"
          >
            {
              tools.map((s) => {
                const invert = invertInDark.includes(s.name);
                return (
                  <li class="flex flex-col items-center gap-2">
                    <div
                      class="w-14 h-14 rounded-xl glass-card ring-1 ring-black/5 dark:ring-white/10 flex items-center justify-center transition-transform duration-300 hover:scale-110"
                      title={s.name}
                    >
                      <img
                        src={s.icon}
                        alt={s.name}
                        class={`w-8 h-8 ${invert ? "icon-invert-dark" : ""}`}
                        loading="lazy"
                        decoding="async"
                        fetchpriority="low"
                        width="32"
                        height="32"
                      />
                    </div>
                    <span class="text-xs sm:text-sm text-surface text-center tracking-tight">
                      {s.name}
                    </span>
                  </li>
                );
              })
            }
          </ul>
        </article>
      </div>
    </div>
  </div>
</section>
